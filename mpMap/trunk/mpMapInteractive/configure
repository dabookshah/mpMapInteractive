#!/bin/bash
if [ ! -e "${R_PACKAGE_DIR}" ]; then
	echo Package directory did not exist
	echo Exiting....
	exit 1
fi
if [ ! -e "${QT_DIRECTORY}" ]; then
	echo Unable to locate QT directory
	echo Exiting....
	exit 1
fi

cd src
export QMAKESPEC=${QT_DIRECTORY}/mkspecs/macx-clang
${QT_DIRECTORY}/bin/qmake mac.pro -o mac.Makefile

mode=release

mkdir -p "${R_PACKAGE_DIR}/libs/${R_ARCH}/platforms"
make -f mac.Makefile
cd ..

